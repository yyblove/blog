<%- include header %>

<form method="post">
    标题：<br/>
    <input type="text" name="title" value="<%= post.title %>" disabled="disabled"/> <br/>
    标签：<br/>
    <input type="text" name="tag1" value="<%= post.tags[0] %>"/> <br/>
    <input type="text" name="tag2" value="<%= post.tags[1] %>"/> <br/>
    <input type="text" name="tag3" value="<%= post.tags[2] %>"/> <br/>
    正文：<br/>
    <textarea type="text" name="post" rows="20" cols="100">
    <%= post.post %>
    </textarea> <br/>
    <input type="submit" value="保存修改"/>


</form>

<%- include footer %>
